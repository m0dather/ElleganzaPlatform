@model ElleganzaPlatform.Application.ViewModels.Store.CustomerOrdersViewModel
@{
    Layout = "_Layout";
    ViewBag.Title = "My Orders";
}

        <!-- /header -->

        <!-- page-title -->
        <div class="tf-page-title">
            <div class="container-full">
                <div class="heading text-center">My Orders</div>
            </div>
        </div>
        <!-- /page-title -->

        <!-- page-cart -->
        <section class="flat-spacing-11">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3">
                        <div class="wrap-sidebar-account">
                            <ul class="my-account-nav">
                                <li><a href="@Url.Action("Index", "Account")" class="my-account-nav-item ">Dashboard</a></li>
                                <li><span class="my-account-nav-item active">Orders</span></li>
                                <li><a href="@Url.Action("Addresses", "Account")" class="my-account-nav-item">Address</a></li>
                                <li><a href="@Url.Action("EditProfile", "Account")" class="my-account-nav-item">Account Details</a></li>
                                <li><a href="@Url.Action("Wishlist", "Account")" class="my-account-nav-item">Wishlist</a></li>
                                <li><a href="@Url.Action("Login", "Auth")" class="my-account-nav-item">Logout</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-9">
                        <div class="my-account-content account-order">
                            <div class="wrap-account-order">
                                @if (Model.Orders.Any())
                                {
                                    <table>
                                            <thead>
                                            <tr>
                                                <th class="fw-6">Order</th>
                                                <th class="fw-6">Date</th>
                                                <th class="fw-6">Status</th>
                                                <th class="fw-6">Total</th>
                                                <th class="fw-6">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var order in Model.Orders)
                                            {
                                                <tr class="tf-order-item">
                                                    <td>
                                                        @order.OrderNumber
                                                    </td>
                                                    <td>
                                                        @order.CreatedAt.ToString("MMM dd, yyyy")
                                                    </td>
                                                    <td>
                                                        @order.Status
                                                    </td>
                                                    <td>
                                                        $@order.TotalAmount.ToString("F2") for @order.ItemCount item@(order.ItemCount != 1 ? "s" : "")
                                                    </td>
                                                    <td>
                                                        <div class="d-flex gap-2">
                                                            <a href="/account/orders/@order.Id"
                                                                class="tf-btn btn-outline-dark animate-hover-btn rounded-0 justify-content-center">
                                                                <span>View</span>
                                                            </a>
                                                            @if (order.CanBePaid)
                                                            {
                                                                <!-- Phase 4: Pay Now button - only for Pending orders -->
                                                                <form asp-controller="Payment" asp-action="CreatePayment" method="post" class="d-inline">
                                                                    @Html.AntiForgeryToken()
                                                                    <input type="hidden" name="orderId" value="@order.Id" />
                                                                    <button type="submit" class="tf-btn btn-fill animate-hover-btn rounded-0 justify-content-center" style="background-color: #28a745; border-color: #28a745;">
                                                                        <span>Pay Now</span>
                                                                    </button>
                                                                </form>
                                                            }
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                    @if (Model.TotalPages > 1)
                                    {
                                        <div class="tf-pagination-wrap view-more-button text-center">
                                            <ul class="tf-pagination-list">
                                                @if (Model.CurrentPage > 1)
                                                {
                                                    <li>
                                                        <a href="@Url.Action("Orders", "Account", new { page = Model.CurrentPage - 1 })" class="pagination-link">
                                                            <i class="icon-arrow-left"></i>
                                                        </a>
                                                    </li>
                                                }
                                                @for (int i = 1; i <= Model.TotalPages; i++)
                                                {
                                                    <li>
                                                        <a href="@Url.Action("Orders", "Account", new { page = i })" 
                                                           class="pagination-link @(i == Model.CurrentPage ? "active" : "")">@i</a>
                                                    </li>
                                                }
                                                @if (Model.CurrentPage < Model.TotalPages)
                                                {
                                                    <li>
                                                        <a href="@Url.Action("Orders", "Account", new { page = Model.CurrentPage + 1 })" class="pagination-link">
                                                            <i class="icon-arrow-right"></i>
                                                        </a>
                                                    </li>
                                                }
                                            </ul>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="text-center py-5">
                                        <p class="fs-5 text-muted">You haven't placed any orders yet.</p>
                                        <a href="/" class="tf-btn btn-fill animate-hover-btn rounded-0 mt-3">
                                            <span>Start Shopping</span>
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- page-cart -->


        <div class="btn-sidebar-account">
            <button data-bs-toggle="offcanvas" data-bs-target="#mbAccount" aria-controls="offcanvas"><i
                    class="icon icon-sidebar-2"></i></button>
        </div>

        <!-- footer -->
