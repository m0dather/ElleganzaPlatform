@model ElleganzaPlatform.Application.ViewModels.Store.CheckoutViewModel
@{
    Layout = "_Layout";
    ViewBag.Title = "Checkout";
}

<!-- page-title -->
<div class="tf-page-title">
    <div class="container-full">
        <div class="heading text-center">Check Out</div>
        <p class="text-center text-2 text_black-2 mt_5">Step 1 of 4</p>
    </div>
</div>
<!-- /page-title -->

<!-- page-cart -->
<section class="flat-spacing-11">
    <div class="container">
        <div class="tf-page-cart-wrap layout-2">
            <div class="tf-page-cart-item">
                <h5 class="fw-5 mb_20">Billing details</h5>
                <form class="form-checkout" method="post" asp-action="CreateSession" asp-controller="Checkout" id="checkoutForm">
                    @Html.AntiForgeryToken()
                    
                    <div class="box grid-2">
                        <fieldset class="fieldset">
                            <label for="ShippingAddress_FirstName">First Name *</label>
                            <input type="text" id="ShippingAddress_FirstName" name="ShippingAddress.FirstName" 
                                   value="@Model.ShippingAddress.FirstName" required 
                                   class="@(ViewData.ModelState["ShippingAddress.FirstName"]?.Errors.Count > 0 ? "input-error" : "")">
                            <span asp-validation-for="ShippingAddress.FirstName" class="text-danger"></span>
                        </fieldset>
                        <fieldset class="fieldset">
                            <label for="ShippingAddress_LastName">Last Name *</label>
                            <input type="text" id="ShippingAddress_LastName" name="ShippingAddress.LastName" 
                                   value="@Model.ShippingAddress.LastName" required 
                                   class="@(ViewData.ModelState["ShippingAddress.LastName"]?.Errors.Count > 0 ? "input-error" : "")">
                            <span asp-validation-for="ShippingAddress.LastName" class="text-danger"></span>
                        </fieldset>
                    </div>
                    
                    <fieldset class="box fieldset">
                        <label for="ShippingAddress_Email">Email *</label>
                        <input type="email" id="ShippingAddress_Email" name="ShippingAddress.Email" 
                               value="@Model.ShippingAddress.Email" required 
                               class="@(ViewData.ModelState["ShippingAddress.Email"]?.Errors.Count > 0 ? "input-error" : "")">
                        <span asp-validation-for="ShippingAddress.Email" class="text-danger"></span>
                    </fieldset>
                    
                    <fieldset class="box fieldset">
                        <label for="ShippingAddress_Phone">Phone Number *</label>
                        <input type="tel" id="ShippingAddress_Phone" name="ShippingAddress.Phone" 
                               value="@Model.ShippingAddress.Phone" required 
                               class="@(ViewData.ModelState["ShippingAddress.Phone"]?.Errors.Count > 0 ? "input-error" : "")">
                        <span asp-validation-for="ShippingAddress.Phone" class="text-danger"></span>
                    </fieldset>
                    
                    <fieldset class="box fieldset">
                        <label for="ShippingAddress_Country">Country/Region *</label>
                        <div class="select-custom">
                            <select class="tf-select w-100" id="ShippingAddress_Country" name="ShippingAddress.Country" required>
                                <option value="">Select Country</option>
                                <option value="United States">United States</option>
                                <option value="Canada">Canada</option>
                                <option value="United Kingdom">United Kingdom</option>
                                <option value="Australia">Australia</option>
                                <option value="Germany">Germany</option>
                                <option value="France">France</option>
                                <option value="Italy">Italy</option>
                                <option value="Spain">Spain</option>
                                <option value="Netherlands">Netherlands</option>
                                <option value="Belgium">Belgium</option>
                                <option value="Sweden">Sweden</option>
                                <option value="Norway">Norway</option>
                                <option value="Denmark">Denmark</option>
                                <option value="Finland">Finland</option>
                                <option value="Japan">Japan</option>
                                <option value="South Korea">South Korea</option>
                                <option value="Singapore">Singapore</option>
                                <option value="New Zealand">New Zealand</option>
                            </select>
                        </div>
                        <span asp-validation-for="ShippingAddress.Country" class="text-danger"></span>
                    </fieldset>
                    
                    <fieldset class="box fieldset">
                        <label for="ShippingAddress_AddressLine1">Address Line 1 *</label>
                        <input type="text" id="ShippingAddress_AddressLine1" name="ShippingAddress.AddressLine1" 
                               value="@Model.ShippingAddress.AddressLine1" required 
                               class="@(ViewData.ModelState["ShippingAddress.AddressLine1"]?.Errors.Count > 0 ? "input-error" : "")">
                        <span asp-validation-for="ShippingAddress.AddressLine1" class="text-danger"></span>
                    </fieldset>
                    
                    <fieldset class="box fieldset">
                        <label for="ShippingAddress_AddressLine2">Address Line 2</label>
                        <input type="text" id="ShippingAddress_AddressLine2" name="ShippingAddress.AddressLine2" 
                               value="@Model.ShippingAddress.AddressLine2">
                    </fieldset>
                    
                    <fieldset class="box fieldset">
                        <label for="ShippingAddress_City">Town/City *</label>
                        <input type="text" id="ShippingAddress_City" name="ShippingAddress.City" 
                               value="@Model.ShippingAddress.City" required 
                               class="@(ViewData.ModelState["ShippingAddress.City"]?.Errors.Count > 0 ? "input-error" : "")">
                        <span asp-validation-for="ShippingAddress.City" class="text-danger"></span>
                    </fieldset>
                    
                    <fieldset class="box fieldset">
                        <label for="ShippingAddress_State">State/Province *</label>
                        <input type="text" id="ShippingAddress_State" name="ShippingAddress.State" 
                               value="@Model.ShippingAddress.State" required 
                               class="@(ViewData.ModelState["ShippingAddress.State"]?.Errors.Count > 0 ? "input-error" : "")">
                        <span asp-validation-for="ShippingAddress.State" class="text-danger"></span>
                    </fieldset>
                    
                    <fieldset class="box fieldset">
                        <label for="ShippingAddress_PostalCode">Postal Code *</label>
                        <input type="text" id="ShippingAddress_PostalCode" name="ShippingAddress.PostalCode" 
                               value="@Model.ShippingAddress.PostalCode" required 
                               class="@(ViewData.ModelState["ShippingAddress.PostalCode"]?.Errors.Count > 0 ? "input-error" : "")">
                        <span asp-validation-for="ShippingAddress.PostalCode" class="text-danger"></span>
                    </fieldset>
                    
                    <div class="box-checkbox fieldset-radio mb_20">
                        <input type="checkbox" id="UseSameAddressForBilling" name="UseSameAddressForBilling" 
                               @(Model.UseSameAddressForBilling ? "checked" : "") class="tf-check">
                        <label for="UseSameAddressForBilling" class="text_black-2">
                            Billing address same as shipping address
                        </label>
                    </div>
                    
                    <fieldset class="box fieldset">
                        <label for="CustomerNotes">Order notes (optional)</label>
                        <textarea name="CustomerNotes" id="CustomerNotes" rows="4">@Model.CustomerNotes</textarea>
                    </fieldset>
                    
                    <button type="submit" id="submitBtn" class="tf-btn radius-3 btn-fill btn-icon animate-hover-btn justify-content-center">
                        <span id="btnText">Continue to Shipping</span>
                        <span id="btnSpinner" style="display:none;">
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                            Processing...
                        </span>
                    </button>
                </form>
            </div>
            
            <div class="tf-page-cart-footer">
                <div class="tf-cart-footer-inner">
                    <h5 class="fw-5 mb_20">Your order</h5>
                    <div class="tf-page-cart-checkout widget-wrap-checkout">
                        @if (Model.Cart.Items != null && Model.Cart.Items.Any())
                        {
                            <ul class="wrap-checkout-product">
                                @foreach (var item in Model.Cart.Items)
                                {
                                    <li class="checkout-product-item">
                                        <figure class="img-product">
                                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                                            {
                                                <img src="@item.ImageUrl" alt="@item.ProductName">
                                            }
                                            else
                                            {
                                                <img src="~/images/products/default.jpg" alt="@item.ProductName">
                                            }
                                            <span class="quantity">@item.Quantity</span>
                                        </figure>
                                        <div class="content">
                                            <div class="info">
                                                <p class="name">@item.ProductName</p>
                                                @if (!string.IsNullOrEmpty(item.ProductSku))
                                                {
                                                    <span class="variant">SKU: @item.ProductSku</span>
                                                }
                                            </div>
                                            <span class="price">$@item.TotalPrice.ToString("F2")</span>
                                        </div>
                                    </li>
                                }
                            </ul>
                            
                            <div class="d-flex justify-content-between line pb_8">
                                <span class="text_black-2">Subtotal</span>
                                <span class="text_black-2 fw-6">$@Model.Cart.SubTotal.ToString("F2")</span>
                            </div>
                            <div class="d-flex justify-content-between line pb_8">
                                <span class="text_black-2">Shipping</span>
                                <span class="text_black-2 fw-6">$@Model.Cart.ShippingAmount.ToString("F2")</span>
                            </div>
                            <div class="d-flex justify-content-between line pb_20">
                                <span class="text_black-2">Tax</span>
                                <span class="text_black-2 fw-6">$@Model.Cart.TaxAmount.ToString("F2")</span>
                            </div>
                            <div class="d-flex justify-content-between line pb_20">
                                <h6 class="fw-5">Total</h6>
                                <h6 class="total fw-5">$@Model.Cart.TotalAmount.ToString("F2")</h6>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <p class="text_black-2">Your cart is empty</p>
                                <a href="/" class="tf-btn btn-sm radius-3 btn-fill btn-icon animate-hover-btn mt-3">
                                    Continue Shopping
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- /page-cart -->

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Double submit prevention and loading state
        (function() {
            var form = document.getElementById('checkoutForm');
            var submitBtn = document.getElementById('submitBtn');
            var btnText = document.getElementById('btnText');
            var btnSpinner = document.getElementById('btnSpinner');
            var isSubmitting = false;
            
            if (form) {
                form.addEventListener('submit', function(e) {
                    // Check if jQuery validation is available and validate the form
                    if (typeof $ !== 'undefined' && typeof $.fn.valid === 'function') {
                        var isValid = $(form).valid();
                        if (!isValid) {
                            // Form is invalid, don't submit and don't lock the button
                            e.preventDefault();
                            return false;
                        }
                    }
                    
                    // Prevent double submit only if validation passed
                    if (isSubmitting) {
                        e.preventDefault();
                        return false;
                    }
                    
                    isSubmitting = true;
                    
                    // Disable button to prevent double submit
                    submitBtn.disabled = true;
                    
                    // Show loading state
                    btnText.style.display = 'none';
                    btnSpinner.style.display = 'inline';
                    
                    return true;
                });
            }
        })();
    </script>
}
