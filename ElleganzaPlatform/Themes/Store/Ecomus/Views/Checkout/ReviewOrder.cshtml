@model ElleganzaPlatform.Application.ViewModels.Store.CheckoutSessionViewModel
@{
    Layout = "_Layout";
    ViewBag.Title = "Review Order";
}

<!-- page-title -->
<div class="tf-page-title">
    <div class="container-full">
        <div class="heading text-center">Review Your Order</div>
        <p class="text-center text-2 text_black-2 mt_5">Step 4 of 4</p>
    </div>
</div>
<!-- /page-title -->

<!-- page-review -->
<section class="flat-spacing-11">
    <div class="container">
        <div class="tf-page-cart-wrap layout-2">
            <div class="tf-page-cart-item">
                <h5 class="fw-5 mb_20">Order Details</h5>
                
                <!-- Shipping Address -->
                <div class="box-info-order mb_20">
                    <h6 class="fw-5 mb_10">Shipping Address</h6>
                    <p class="text_black-2 mb_0">@Model.ShippingAddress</p>
                </div>
                
                <!-- Billing Address -->
                <div class="box-info-order mb_20">
                    <h6 class="fw-5 mb_10">Billing Address</h6>
                    <p class="text_black-2 mb_0">@Model.BillingAddress</p>
                </div>
                
                <!-- Shipping Method -->
                <div class="box-info-order mb_20">
                    <h6 class="fw-5 mb_10">Shipping Method</h6>
                    <p class="text_black-2 mb_0">
                        <strong>@Model.ShippingMethod</strong> - $@Model.ShippingCost.ToString("F2")
                    </p>
                </div>
                
                <!-- Payment Method -->
                <div class="box-info-order mb_20">
                    <h6 class="fw-5 mb_10">Payment Method</h6>
                    <p class="text_black-2 mb_0">
                        @if (Model.PaymentMethod == ElleganzaPlatform.Domain.Enums.PaymentMethod.Online)
                        {
                            <strong>Pay Online (Credit/Debit Card)</strong>
                            <br />
                            <small class="text-muted">You will be redirected to secure payment gateway</small>
                        }
                        else
                        {
                            <strong>Cash on Delivery (COD)</strong>
                            <br />
                            <small class="text-muted">Pay with cash when your order is delivered</small>
                        }
                    </p>
                </div>
                
                <!-- Customer Notes -->
                @if (!string.IsNullOrEmpty(Model.CustomerNotes))
                {
                    <div class="box-info-order mb_20">
                        <h6 class="fw-5 mb_10">Order Notes</h6>
                        <p class="text_black-2 mb_0">@Model.CustomerNotes</p>
                    </div>
                }
                
                <!-- Confirmation Form -->
                <form class="form-confirm-order" method="post" action="/checkout/confirm-order" id="confirmForm">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="checkoutSessionId" value="@Model.Id" />
                    
                    <div class="d-flex gap-3 justify-content-between mt_30">
                        <a href="/checkout/select-payment/@Model.Id" class="tf-btn btn-outline-dark radius-3 btn-icon animate-hover-btn">
                            <i class="icon icon-arrow-left"></i> Back to Payment
                        </a>
                        <button type="submit" id="submitBtn" class="tf-btn radius-3 btn-fill btn-icon animate-hover-btn">
                            @if (Model.PaymentMethod == ElleganzaPlatform.Domain.Enums.PaymentMethod.Online)
                            {
                                <span id="btnText">Proceed to Payment</span>
                            }
                            else
                            {
                                <span id="btnText">Confirm Order</span>
                            }
                            <span id="btnSpinner" style="display:none;">
                                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                Processing...
                            </span>
                        </button>
                    </div>
                </form>
            </div>
            
            <div class="tf-page-cart-footer">
                <div class="tf-cart-footer-inner">
                    <h5 class="fw-5 mb_20">Order Summary</h5>
                    <div class="tf-page-cart-checkout widget-wrap-checkout">
                        @if (Model.Cart.Items != null && Model.Cart.Items.Any())
                        {
                            <ul class="wrap-checkout-product">
                                @foreach (var item in Model.Cart.Items)
                                {
                                    <li class="checkout-product-item">
                                        <figure class="img-product">
                                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                                            {
                                                <img src="@item.ImageUrl" alt="@item.ProductName">
                                            }
                                            else
                                            {
                                                <img src="~/images/products/default.jpg" alt="@item.ProductName">
                                            }
                                            <span class="quantity">@item.Quantity</span>
                                        </figure>
                                        <div class="content">
                                            <div class="info">
                                                <p class="name">@item.ProductName</p>
                                                @if (!string.IsNullOrEmpty(item.ProductSku))
                                                {
                                                    <span class="variant">SKU: @item.ProductSku</span>
                                                }
                                            </div>
                                            <span class="price">$@item.TotalPrice.ToString("F2")</span>
                                        </div>
                                    </li>
                                }
                            </ul>
                            
                            <div class="d-flex justify-content-between line pb_8">
                                <span class="text_black-2">Subtotal</span>
                                <span class="text_black-2 fw-6">$@Model.Cart.SubTotal.ToString("F2")</span>
                            </div>
                            <div class="d-flex justify-content-between line pb_8">
                                <span class="text_black-2">Shipping (@Model.ShippingMethod)</span>
                                <span class="text_black-2 fw-6">$@Model.ShippingCost.ToString("F2")</span>
                            </div>
                            <div class="d-flex justify-content-between line pb_8">
                                <span class="text_black-2">Tax</span>
                                <span class="text_black-2 fw-6">$@Model.Cart.TaxAmount.ToString("F2")</span>
                            </div>
                            <div class="d-flex justify-content-between line pb_20">
                                <h6 class="fw-5">Total</h6>
                                <h6 class="total fw-5">$@Model.TotalAmount.ToString("F2")</h6>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <p class="text_black-2">Your cart is empty</p>
                                <a href="/" class="tf-btn btn-sm radius-3 btn-fill btn-icon animate-hover-btn mt-3">
                                    Continue Shopping
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- /page-review -->

@section Scripts {
    <script>
        (function() {
            var form = document.getElementById('confirmForm');
            var submitBtn = document.getElementById('submitBtn');
            var btnText = document.getElementById('btnText');
            var btnSpinner = document.getElementById('btnSpinner');
            var isSubmitting = false;
            
            // Form submission handling
            if (form) {
                form.addEventListener('submit', function(e) {
                    // Prevent double submit
                    if (isSubmitting) {
                        e.preventDefault();
                        return false;
                    }
                    
                    isSubmitting = true;
                    submitBtn.disabled = true;
                    btnText.style.display = 'none';
                    btnSpinner.style.display = 'inline';
                    
                    return true;
                });
            }
        })();
    </script>
}
