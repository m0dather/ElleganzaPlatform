@model ElleganzaPlatform.Application.ViewModels.Store.CheckoutSessionViewModel

@{
    ViewData["Title"] = "Select Payment Method";
}

<div class="container my-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <h2 class="mb-4">Select Payment Method</h2>
            
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Order Summary</h5>
                    <p>Subtotal: $@Model.Cart.SubTotal.ToString("F2")</p>
                    <p>Tax: $@Model.Cart.TaxAmount.ToString("F2")</p>
                    <p>Shipping (@Model.ShippingMethod): $@Model.ShippingCost.ToString("F2")</p>
                    <hr />
                    <h5>Total: $@Model.Cart.TotalAmount.ToString("F2")</h5>
                </div>
            </div>

            <form asp-action="UpdatePayment" asp-controller="Checkout" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="CheckoutSessionId" value="@Model.Id" />
                
                <div class="mb-4">
                    <h5>Choose Payment Method</h5>
                    
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="radio" name="PaymentMethod" 
                               id="payment_online" value="@((int)ElleganzaPlatform.Domain.Enums.PaymentMethod.Online)" required checked>
                        <label class="form-check-label" for="payment_online">
                            <strong>Pay Online</strong>
                            <br />
                            <small class="text-muted">Pay securely with credit/debit card via Stripe</small>
                        </label>
                    </div>
                    
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="radio" name="PaymentMethod" 
                               id="payment_cod" value="@((int)ElleganzaPlatform.Domain.Enums.PaymentMethod.CashOnDelivery)" required>
                        <label class="form-check-label" for="payment_cod">
                            <strong>Cash on Delivery (COD)</strong>
                            <br />
                            <small class="text-muted">Pay with cash when your order is delivered</small>
                        </label>
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="SelectShipping" asp-controller="Checkout" 
                       asp-route-sessionId="@Model.Id" class="btn btn-secondary">Back</a>
                    <button type="submit" class="btn btn-primary">Place Order</button>
                </div>
            </form>
        </div>
    </div>
</div>
