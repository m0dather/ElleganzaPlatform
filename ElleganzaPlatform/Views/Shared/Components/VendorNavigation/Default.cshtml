@model List<ElleganzaPlatform.ViewComponents.NavigationItem>

@if (Model != null && Model.Any())
{
    <ul class="nav flex-column">
        @foreach (var item in Model)
        {
            <li class="nav-item">
                @if (item.IsPostAction)
                {
                    <form method="post" action="@item.Url" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="nav-link btn btn-link text-start w-100 border-0 @(item.IsActive ? "active" : "")">
                            <i class="@item.Icon me-2"></i>
                            @item.Text
                        </button>
                    </form>
                }
                else
                {
                    <a class="nav-link @(item.IsActive ? "active" : "")" href="@item.Url">
                        <i class="@item.Icon me-2"></i>
                        @item.Text
                    </a>
                }
            </li>
        }
    </ul>
}
