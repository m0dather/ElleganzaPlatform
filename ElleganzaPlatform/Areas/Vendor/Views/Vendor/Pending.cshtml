@{
    ViewData["Title"] = "Vendor Approval Pending";
    Layout = "~/Themes/Store/Ecomus/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center py-5">
                    <div class="mb-4">
                        <i class="bi bi-clock-history display-1 text-warning"></i>
                    </div>
                    <h2 class="mb-3">Vendor Account Pending Approval</h2>
                    <p class="text-muted mb-4 lead">
                        Thank you for registering as a vendor with Elleganza Platform!
                    </p>
                    <div class="alert alert-info text-start" role="alert">
                        <h5 class="alert-heading">
                            <i class="bi bi-info-circle me-2"></i>
                            What happens next?
                        </h5>
                        <hr>
                        <ul class="mb-0">
                            <li class="mb-2">Our admin team is reviewing your vendor registration</li>
                            <li class="mb-2">You will receive an email notification once your account is approved</li>
                            <li class="mb-2">Approval typically takes 1-2 business days</li>
                            <li>Once approved, you'll have full access to the Vendor Dashboard</li>
                        </ul>
                    </div>
                    <div class="mt-4">
                        <p class="text-muted mb-3">
                            <strong>Important:</strong> Your account is currently inactive and you cannot access vendor features until approval.
                        </p>
                        <a href="@Url.Action("Index", "Home", new { area = "" })" class="btn btn-primary">
                            <i class="bi bi-house me-2"></i>
                            Return to Home
                        </a>
                        <form method="post" action="/logout" class="d-inline ms-2">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-secondary">
                                <i class="bi bi-box-arrow-right me-2"></i>
                                Logout
                            </button>
                        </form>
                    </div>
                    <div class="mt-4 pt-3 border-top">
                        <p class="text-muted small mb-0">
                            <i class="bi bi-envelope me-1"></i>
                            Questions? Contact our support team at 
                            <a href="mailto:support@elleganza.com">support@elleganza.com</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
