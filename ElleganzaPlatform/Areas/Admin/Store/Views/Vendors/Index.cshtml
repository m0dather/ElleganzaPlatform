@model List<ElleganzaPlatform.Domain.Entities.Vendor>
@using ElleganzaPlatform.Domain.Enums
@{
    ViewData["Title"] = "Vendor Management";
    var currentFilter = ViewData["CurrentFilter"] as VendorStatus?;
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h3 mb-3">
                <i class="bi bi-shop me-2"></i>
                Vendor Management
            </h1>
        </div>
    </div>

    <!-- Stage 4.2: Status Filter Buttons -->
    <div class="row mb-3">
        <div class="col-12">
            <div class="btn-group" role="group" aria-label="Vendor status filter">
                <a href="@Url.Action("Index")" 
                   class="btn @(currentFilter == null ? "btn-primary" : "btn-outline-primary")">
                    <i class="bi bi-grid-3x3-gap me-1"></i> All Vendors
                </a>
                <a href="@Url.Action("Index", new { status = VendorStatus.Pending })" 
                   class="btn @(currentFilter == VendorStatus.Pending ? "btn-warning" : "btn-outline-warning")">
                    <i class="bi bi-clock me-1"></i> Pending
                </a>
                <a href="@Url.Action("Index", new { status = VendorStatus.Approved })" 
                   class="btn @(currentFilter == VendorStatus.Approved ? "btn-success" : "btn-outline-success")">
                    <i class="bi bi-check-circle me-1"></i> Approved
                </a>
                <a href="@Url.Action("Index", new { status = VendorStatus.Rejected })" 
                   class="btn @(currentFilter == VendorStatus.Rejected ? "btn-danger" : "btn-outline-danger")">
                    <i class="bi bi-x-circle me-1"></i> Rejected
                </a>
                <a href="@Url.Action("Index", new { status = VendorStatus.Suspended })" 
                   class="btn @(currentFilter == VendorStatus.Suspended ? "btn-secondary" : "btn-outline-secondary")">
                    <i class="bi bi-pause-circle me-1"></i> Suspended
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        @if (currentFilter == null)
                        {
                            <text>All Vendors</text>
                        }
                        else
                        {
                            @currentFilter.ToString() <text> Vendors</text>
                        }
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Contact Email</th>
                                        <th>Status</th>
                                        <th>Commission Rate</th>
                                        <th>Created At</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var vendor in Model)
                                    {
                                        <tr>
                                            <td>@vendor.Id</td>
                                            <td>
                                                <strong>@vendor.Name</strong><br />
                                                <small class="text-muted">@vendor.NameAr</small>
                                            </td>
                                            <td>@vendor.ContactEmail</td>
                                            <td>
                                                @* Stage 4.2: Enhanced status badges *@
                                                @switch (vendor.Status)
                                                {
                                                    case VendorStatus.Pending:
                                                        <span class="badge bg-warning text-dark">
                                                            <i class="bi bi-clock me-1"></i> Pending
                                                        </span>
                                                        break;
                                                    case VendorStatus.Approved:
                                                        <span class="badge bg-success">
                                                            <i class="bi bi-check-circle me-1"></i> Approved
                                                        </span>
                                                        break;
                                                    case VendorStatus.Rejected:
                                                        <span class="badge bg-danger">
                                                            <i class="bi bi-x-circle me-1"></i> Rejected
                                                        </span>
                                                        break;
                                                    case VendorStatus.Suspended:
                                                        <span class="badge bg-secondary">
                                                            <i class="bi bi-pause-circle me-1"></i> Suspended
                                                        </span>
                                                        break;
                                                }
                                            </td>
                                            <td>@vendor.CommissionRate.ToString("P2")</td>
                                            <td>@vendor.CreatedAt.ToString("yyyy-MM-dd")</td>
                                            <td>
                                                <a href="@Url.Action("Details", new { id = vendor.Id })" 
                                                   class="btn btn-sm btn-primary">
                                                    <i class="bi bi-eye"></i> Details
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle me-2"></i>
                            No vendors found
                            @if (currentFilter != null)
                            {
                                <text> with status "@currentFilter"</text>
                            }
                            .
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
