@model List<ElleganzaPlatform.Domain.Entities.Vendor>
@{
    ViewData["Title"] = "Vendor Management";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h3 mb-3">
                <i class="bi bi-shop me-2"></i>
                Vendor Management
            </h1>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">All Vendors</h5>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Contact Email</th>
                                        <th>Status</th>
                                        <th>Commission Rate</th>
                                        <th>Created At</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var vendor in Model)
                                    {
                                        <tr>
                                            <td>@vendor.Id</td>
                                            <td>
                                                <strong>@vendor.Name</strong><br />
                                                <small class="text-muted">@vendor.NameAr</small>
                                            </td>
                                            <td>@vendor.ContactEmail</td>
                                            <td>
                                                @if (vendor.IsActive)
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Inactive</span>
                                                }
                                            </td>
                                            <td>@vendor.CommissionRate.ToString("P2")</td>
                                            <td>@vendor.CreatedAt.ToString("yyyy-MM-dd")</td>
                                            <td>
                                                <a href="@Url.Action("Details", new { id = vendor.Id })" 
                                                   class="btn btn-sm btn-primary">
                                                    <i class="bi bi-eye"></i> Details
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle me-2"></i>
                            No vendors found in the system.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
