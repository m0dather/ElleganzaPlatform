@model ElleganzaPlatform.Application.ViewModels.Admin.OrderListViewModel
@{
    ViewData["Title"] = "Orders Management";
    Layout = "~/Themes/Admin/Metronic/Views/Shared/_Layout.cshtml";
}

<div class="d-flex flex-column flex-column-fluid">
    <!--begin::Toolbar-->
    <div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
        <div id="kt_app_toolbar_container" class="app-container container-xxl d-flex flex-stack">
            <!--begin::Page title-->
            <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">Orders</h1>
                <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                    <li class="breadcrumb-item text-muted">
                        <a asp-area="Admin" asp-controller="Admin" asp-action="Index" class="text-muted text-hover-primary">Home</a>
                    </li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-400 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-muted">Orders</li>
                </ul>
            </div>
            <!--end::Page title-->
        </div>
    </div>
    <!--end::Toolbar-->
    
    <!--begin::Content-->
    <div id="kt_app_content" class="app-content flex-column-fluid">
        <div id="kt_app_content_container" class="app-container container-xxl">
            <!--begin::Card-->
            <div class="card">
                <!--begin::Card header-->
                <div class="card-header border-0 pt-6">
                    <div class="card-title">
                        <div class="d-flex align-items-center position-relative my-1">
                            <span class="svg-icon svg-icon-1 position-absolute ms-6">
                                <i class="bi bi-search fs-3"></i>
                            </span>
                            <input type="text" id="searchOrders" class="form-control form-control-solid w-250px ps-15" placeholder="Search orders..."/>
                        </div>
                    </div>
                </div>
                <!--end::Card header-->
                
                <!--begin::Card body-->
                <div class="card-body pt-0">
                    @if (Model.Orders.Any())
                    {
                        <!--begin::Table-->
                        <div class="table-responsive">
                            <table class="table align-middle table-row-dashed fs-6 gy-5" id="ordersTable">
                                <thead>
                                    <tr class="text-start text-gray-400 fw-bold fs-7 text-uppercase gs-0">
                                        <th class="min-w-100px">Order #</th>
                                        <th class="min-w-150px">Customer</th>
                                        <th class="min-w-100px">Date</th>
                                        <th class="min-w-100px">Status</th>
                                        <th class="min-w-100px">Items</th>
                                        <th class="min-w-100px text-end">Total</th>
                                        <th class="text-end min-w-70px">Actions</th>
                                    </tr>
                                </thead>
                                <tbody class="fw-semibold text-gray-600">
                                    @foreach (var order in Model.Orders)
                                    {
                                        <tr>
                                            <td>
                                                <a asp-action="Details" asp-route-id="@order.Id" class="text-gray-800 text-hover-primary fw-bold">
                                                    @order.OrderNumber
                                                </a>
                                            </td>
                                            <td>
                                                <div class="d-flex flex-column">
                                                    <span class="text-gray-800 fw-bold">@order.CustomerName</span>
                                                    <span class="text-muted">@order.CustomerEmail</span>
                                                </div>
                                            </td>
                                            <td>
                                                @order.CreatedAt.ToString("MMM dd, yyyy")
                                                <br/>
                                                <span class="text-muted fs-7">@order.CreatedAt.ToString("HH:mm")</span>
                                            </td>
                                            <td>
                                                @{
                                                    var badgeClass = order.Status switch
                                                    {
                                                        ElleganzaPlatform.Domain.Enums.OrderStatus.Pending => "badge-light-warning",
                                                        ElleganzaPlatform.Domain.Enums.OrderStatus.Processing => "badge-light-info",
                                                        ElleganzaPlatform.Domain.Enums.OrderStatus.Completed => "badge-light-success",
                                                        ElleganzaPlatform.Domain.Enums.OrderStatus.Cancelled => "badge-light-danger",
                                                        _ => "badge-light-secondary"
                                                    };
                                                }
                                                <span class="badge @badgeClass">@order.StatusDisplay</span>
                                            </td>
                                            <td>
                                                <span class="badge badge-light">@order.ItemCount</span>
                                            </td>
                                            <td class="text-end">
                                                <span class="text-gray-800 fw-bold">$@order.TotalAmount.ToString("F2")</span>
                                            </td>
                                            <td class="text-end">
                                                <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-light btn-active-light-primary">
                                                    View
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!--end::Table-->
                        
                        @if (Model.TotalPages > 1)
                        {
                            <!--begin::Pagination-->
                            <div class="d-flex flex-stack flex-wrap pt-10">
                                <div class="fs-6 fw-semibold text-gray-700">
                                    Showing @((Model.CurrentPage - 1) * 20 + 1) to @(Math.Min(Model.CurrentPage * 20, Model.TotalOrders)) of @Model.TotalOrders orders
                                </div>
                                <ul class="pagination">
                                    @if (Model.CurrentPage > 1)
                                    {
                                        <li class="page-item previous">
                                            <a asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)" class="page-link">
                                                <i class="previous"></i>
                                            </a>
                                        </li>
                                    }
                                    
                                    @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                                    {
                                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                            <a asp-action="Index" asp-route-page="@i" class="page-link">@i</a>
                                        </li>
                                    }
                                    
                                    @if (Model.CurrentPage < Model.TotalPages)
                                    {
                                        <li class="page-item next">
                                            <a asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)" class="page-link">
                                                <i class="next"></i>
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </div>
                            <!--end::Pagination-->
                        }
                    }
                    else
                    {
                        <div class="text-center py-10">
                            <div class="fs-1 text-gray-400 mb-5">
                                <i class="bi bi-inbox fs-3x"></i>
                            </div>
                            <p class="text-gray-600 fs-4">No orders found</p>
                        </div>
                    }
                </div>
                <!--end::Card body-->
            </div>
            <!--end::Card-->
        </div>
    </div>
    <!--end::Content-->
</div>

@section Scripts {
    <script>
        // Simple search functionality
        document.getElementById('searchOrders')?.addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            const rows = document.querySelectorAll('#ordersTable tbody tr');
            
            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchTerm) ? '' : 'none';
            });
        });
    </script>
}
